                </div><!-- /.col -->
                <div class='col-sm-6' >
                    <div class="form-group">
                        <label>Date</label>
                        <div class='input-group date' id='reservation'>
                            <input type='text' class="form-control" id='loaddate' />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div><!-- /.row -->
            </div><!-- /.box-body -->
