<body>
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.dashBoradData.PaidToday</h3>
                    <p>Fee Collection Today</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="~/Transactions/FeeCollection" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.dashBoradData.PaidThisMonth<sup style="font-size: 20px"></sup></h3>
                    <p>Fee Collection This Month</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="~/Transactions/FeeCollection" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.dashBoradData.NoOfStudents</h3>
                    <p>Total Students</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="~/Master/Students" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.dashBoradData.NoOfCourses</h3>
                    <p>Different Courses</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="~/Master/Courses" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Attendance</h3>
                    <div class="pull-right">
                        @*<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
                            <i class="glyphicon glyphicon-filter"></i>
                        </span>*@
                    </div>
                </div>
                
                <table class="table table-hover" id="dev-table">
                    <thead>
                        <tr>
                            <th>Class Name</th>
                            <th>Absent</th>
                            <th>Present</th>
                            <th>Holiday</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Details)
                        {
                            <tr>
                                <td >@i.Class</td>
                                <td >@i.Absent</td>
                                <td >@i.Present</td>
                                <td >@i.Holiday</td>
                                <td >@i.Total</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

